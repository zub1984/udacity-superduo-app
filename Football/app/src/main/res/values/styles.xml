<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="toolbarStyle">@style/Toolbar</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/primary</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="android:alertDialogTheme">@style/DialogStyle</item>
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
    </style>

    <style name="AboutTheme" parent="AppTheme"/>
    <style name="SettingsTheme" parent="AppTheme"/>

    <style name="PagerTabStripText">
        <item name="android:textSize">@dimen/tab_pager_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="DialogStyle" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/primary</item>
    </style>

    <style name="about_title" parent="TextAppearance.AppCompat.Title">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:layout_marginBottom">@dimen/margin_5dp</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="about_text" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/secondary_text</item>
        <item name="android:gravity">start</item>
    </style>

    <style name="team_crest_style">
        <item name="android:layout_height">@dimen/team_crest_height</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginBottom">@dimen/margin_8dp</item>
        <item name="android:src">@drawable/football</item>
    </style>

    <style name="team_name_text_style">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">2</item>
        <item name="android:textSize">@dimen/TeamNames</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="share_button_style">
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:drawableLeft">@android:drawable/ic_menu_share</item>
        <item name="android:paddingLeft">@dimen/share_button_margin</item>
        <item name="android:paddingRight">@dimen/share_button_margin</item>
    </style>


</resources>
